<div class="form-group">
  <%= f.label :name, class: "control-label" %>
  <%= f.text_field :name, class: "form-control" %>
  <%= content_tag :span, @user.errors[:name][0], class: "help-block" %>
</div>

<div class="form-group">
  <%= f.label :email, class: "control-label" %>
  <%= f.email_field :email, class: "form-control" %>
  <%= content_tag :span, @user.errors[:email][0], class: "help-block" %>
</div>

<div class="form-group">
  <%= f.label :password, class: "control-label" %>
  <%= f.password_field :password, class: "form-control" %>
  <%= content_tag :span, @user.errors[:password][0], class: "help-block" %>
</div>

<div class="form-group">
  <%= f.label :password_confirmation, class: "control-label" %>
  <%= f.password_field :password_confirmation, class: "form-control" %>
  <%= content_tag :span, @user.errors[:password_confirmation][0], class: "help-block" %>
</div>
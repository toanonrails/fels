<% provide :title, t(:signup) %>
<h1  class="page-header"><%= t :signup %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user, url: signup_path do |f|%>

      <%= render "fields", f: f %>

      <div class="form-group">
        <%= f.submit "Create my account", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>